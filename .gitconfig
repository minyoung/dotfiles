[alias]
    b = branch
    ci = commit
    ciam = commit --amend --no-edit
    co = checkout
    cp = cherry-pick
    d = diff
    l = log
    lg = log --graph --pretty=format:'%C(yellow)%h %C(reset)-%C(red)%d %C(reset)%s %C(green)(%cr) %C(bold blue)<%an>%C(reset)'
    ls = log --decorate=short --graph --oneline
    r = rebase
    ri = rebase --interactive
    s = status
    root = rev-parse --show-toplevel

[diff]
    submodule = log

[user]
    name = Min-Young Wu
    email = mwu368@gmail.com

[color]
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
    excludesfile = ~/.gitignore

[branch "master"]
    remote = origin
    merge = refs/heads/master
    rebase = true

[include]
    path = ~/.gitconfig.local
