# environment variables
export PAGER=less
export EDITOR=vim

[[ -r ${HOME}/.localrc ]] && source ${HOME}/.localrc

export VIRTUALENV_DIR=${HOME}/.python/envs/
export WORKON_HOME=${VIRTUALENV_DIR}
source ${VIRTUALENV_DIR}/virtualenvwrapper_bashrc

export GEMENV_HOME=${HOME}/.gem/envs
source ${GEMENV_HOME}/gemenv_bashrc

# [[ -s "$HOME/.rvm/scripts/rvm" ]] && . "$HOME/.rvm/scripts/rvm" # This loads RVM into a shell session.

# java hack
# wmname LG3D
export AWT_TOOLKIT=MToolkit
# export _JAVA_AWT_WM_NONREPARENTING=1

# some package paths
export PYTHONPATH=.:${HOME}/.python:${HOME}/.python/lib/python
export GEM_PATH=${HOME}/.gem/ruby/1.8

export PYTHONSTARTUP=${HOME}/.pythonrc

if [[ -z ${PROMPT_HOST} ]]; then
    PROMPT_HOST=""
fi


# aliases
alias duh='du -h --max-depth=1'
alias ls='ls --color=auto'
alias ll='ls -l'
alias la='ls -a'
alias sl='ls'
alias amke='make'

alias rm='rm'
alias rr='rm -rf'
alias mi='mv -i'

alias vm='valgrind --leak-check=full'

alias dos2unix='recode dos/CR-LF..l1'
alias unix2win='recode l1..windows-1250'
alias unix2dos='recode l1..dos/CR-LF'

alias sd='setxkbmap "us(dvorak)"'
alias oe='setxkbmap us'

alias p='python'

alias j='jrun'
alias m='make'
alias h='htop'

stty -ixon

